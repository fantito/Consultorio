@model IEnumerable<Consultorio.Models.Pacientes>

<div class="col-md-9">
    <p>
        @Html.ActionLink("Nuevo paciente", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas.DocumentoNro)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personas.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personas.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personas.DocumentoNro)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>